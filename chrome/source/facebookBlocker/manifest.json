{
  "name": "FacebookBlocker",
  "version": "1.1",
  "description": "Block Facebook content from appearing on other websites.",
	"update_url": "http://github.com/alexrubin/Facebook-Blocker/raw/master/chrome/facebookblocker.chrome.update.xml",
	"icons":{
		"128":"icon-128.png",
		"48":"icon-48.png",
		"16":"icon-16.png"
	},
	"content_scripts": [ {
		"all_frames": true,
		"js": [ "fbblock.js" ],
		"exclude_globs": [ "http://www.facebook.com", "https://www.facebook.com", "http://*.facebook.com", "https://*.facebook.com" ],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_start"
	}, {
		"all_frames": true,
		"js": [ "fbblock_end.js" ],
		"exclude_globs": [ "http://www.facebook.com", "https://www.facebook.com", "http://*.facebook.com", "https://*.facebook.com" ],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_end"
	} ]
}